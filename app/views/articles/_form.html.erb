<%= form_with(model: article, class: 'pure-form pure-form-stacked') do |form| %>
<fieldset> 
<div class="pure-g">
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="pure-u-1 pure-u-md-1-3">
    <%= form.label :title, class: 'multi-last-name'  %>
    <%= form.text_field :title, class: 'pure-u-23-24' %>
  </div>

  <div class="pure-u-1 pure-u-md-1-3">
    <%= form.label :content, class: 'multi-last-name'  %>
    <%= form.rich_text_area :content, class: "pure-u-23-24" %>
  </div>
 <div class="pure-u-1 pure-u-md-1-3">
  <br/><br/>
  <div class="pure-controls">
    <%= form.submit 'Criar', class: 'pure-button pure-button-primary' %>
    <%= link_to 'Voltar', articles_path, class: 'pure-button pure-button-primary' %>
  </div>

</div>

 


</div>
</fieldset>
<% end %>
